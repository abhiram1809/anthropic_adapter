# Anthropic Adapter Configuration
# Copy this file to .env and fill in your values

# OpenAI API Base URL (default: https://api.openai.com/v1/chat/completions)
OPENAI_BASE_URL=https://api.openai.com/v1/chat/completions

# OpenAI API Key (required for authentication)
OPENAI_API_KEY=your-openai-api-key-here

# Host to bind the adapter to (default: 0.0.0.0)
HOST=0.0.0.0

# Port to bind the adapter to (default: 8000)
PORT=8000

# Tiktoken encoding (default: cl100k_base for GPT-4/3.5)
TIKTOKEN_ENCODING=cl100k_base